[Unit]
Description=Prometheus script exporter
Documentation=https://github.com/ricoberger/script_exporter

[Service]
Restart=always
RestartSec=10
User=prometheus
Group=prometheus
RuntimeDirectory={{ image.name }}
EnvironmentFile=/etc/default/{{ image.name }}
ExecStart=/bin/sh -c "/usr/local/bin/{{ image.upstream.binary }} $ARGS"
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SendSIGKILL=no
LimitNOFILE=8192

[Install]
WantedBy=multi-user.target
