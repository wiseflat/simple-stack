      - targets: ['127.0.0.1:2112']
        labels:
          instance: "{{ inventory_hostname }}"
          project: "{{ prometheus_project }}"
          projectid: "{{ prometheus_project }}"

  - job_name: "systemd_exporter"
    static_configs:
