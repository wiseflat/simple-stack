      - server: "https://127.0.0.1:4646"
        region: "{{ fact_instance.region }}"
        tls_config:
          insecure_skip_verify: true
        authorization:
          credentials: "{{ lookup('community.general.passwordstore', 'nomad/' + inventory_hostname + '/nomad_traefik_token') }}"
    relabel_configs:
      - source_labels: ['__meta_nomad_service']
        regex: 'mimir-exporter'
        action: keep

  - job_name: 'loki'
