    params:
      format: ['prometheus']
    metrics_path: /v1/metrics
    tls_config:
      insecure_skip_verify: true
    static_configs:
      - targets: ['127.0.0.1:4646']
        labels:
          instance: "{{ inventory_hostname }}"
          project: "{{ prometheus_project }}"
          projectid: "{{ prometheus_project }}"


  - job_name: 'mimir_exporter'
